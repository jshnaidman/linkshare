{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API run",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/api/server.go",
            "envFile": [
                "${workspaceFolder}/.env",
                "${workspaceFolder}/.secrets",
            ],
        },
        {
            "name": "API debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/api/server.go",
            "envFile": [
                "${workspaceFolder}/.env",
                "${workspaceFolder}/.secrets",
            ],
        },
        {
            "name": "Load DB",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/tools/loadDB.go",
        },
        {
            "name": "Debug Docker",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}/api",
                    "to": "/app",
                }
            ],
            "host": "127.0.0.1",
            "port": 2345,
            "showLog": true,
            "apiVersion": 2,
            "trace": "verbose",
            "logOutput": "rpc"
        }
    ]
}